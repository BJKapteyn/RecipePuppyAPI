@model IEnumerable<RecipePuppy.Models.Recipe>

@{
    ViewBag.Title = "RecipeList";
}

<h2>RecipeList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredients)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            <img src="@item.ThumbNail" class="recipeImage" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredients)
        </td>
        <td>
            <form action="~/Home/RecipeFavorite">
                <input name="title" value="@item.Title" class="hiddenElement" />
                <input name="image" value="@item.ThumbNail" class="hiddenElement" />
                <input name="ingredients" value="@item.Ingredients" class="hiddenElement" />
                <input name="thumbNail" value="@item.Ingredients" class="hiddenElement" />
                <input type="submit" class="favoriteButton" value="Favorite &#10084" />
            </form>

        </td>

    </tr>
}

</table>
