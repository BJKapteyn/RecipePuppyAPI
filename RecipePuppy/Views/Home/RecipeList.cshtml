@model IEnumerable<RecipePuppy.Models.Recipe>

@{
    ViewBag.Title = "RecipeList";
}

<h2>RecipeList</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ingredients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThumbNail)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ingredients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThumbNail)
        </td>
        <td>
            <form action="~/Home/RecipeFavorite">
                <input name="title" value="@item.Title" class="hide" />
                <input name="image" value="@item.Image" class="hide" />
                <input name="ingredients" value="@item.Ingredients" class="hide" />
                <input name="thumbNail" value="@item.Ingredients" class="hide" />
                <input type="submit" value="&#10084" class="favoriteButton" />
            </form>
            <a href="~/Home/RecipeFavorite">&#10084;</a>

        </td>

    </tr>
}

</table>
